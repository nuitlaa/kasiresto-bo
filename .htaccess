<IfModule mod_rewrite.c>
    RewriteEngine On

    #############################
    # 1. STOP redirect /file/
    #############################
    # Jika URL diawali /file/ â†’ rewrite internal ke /f/
    #RewriteCond %{REQUEST_URI} ^/file/
    #RewriteRule ^file/(.*)$ /f/$1 [L]

    #############################
    # 2. Hilangkan index.php CI4
    #############################
    #RewriteCond %{THE_REQUEST} \s/index\.php/([^\s?]*) [NC]
